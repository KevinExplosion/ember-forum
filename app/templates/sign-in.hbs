<div class="row">
  <div class="col-sm-3">

    <h3>Sign In</h3>

      {{input
          type='text'
          class='form-control'
          value=email
          placeholder='email'
      }}
      {{input
          type='password'
          class='form-control'
          value=password
          placeholder='password'
      }}

      {{#if session.isWorking}}
        <button class='btn btn-default' disabled='disabled'>
            {{fa-icon 'spinner' spin=true}} Signing in...
        </button>
      {{else}}
        <button class='btn btn-default'{{action 'signIn' 'password'}}>
          {{fa-icon 'sign-in'}} Sign In
        </button>
      {{/if}}
  </div>
</div>
