{{#if updateAnswerForm}}
  <div class="row">
    <div class="col-md-4">
      <h3>Update {{answer.title}}</h3>

      <form>

        <div class="form-group">
          <div class="row">
            <div class="col-md-3">
              <label for="subject">Subject</label>
            </div>
            <div class="col-md-9">
              {{input value=subject id="subject"}}
            </div>
          </div>
        </div>

        <div class="form-group">
          <div class="row">
            <div class="col-md-3">
              <label for="category">Category</label>
            </div>
            <div class="col-md-9">
              {{input value=category id="category"}}
            </div>
          </div>
        </div>

        <div class="form-group">
          <div class="row">
            <div class="col-md-3">
              <label for="body">Body</label>
            </div>
            <div class="col-md-9">
              {{input value=body id="body"}}
            </div>
          </div>
        </div>

      </form>

      <button {{action 'updateAnswer' answer}}>Submit Updated Answer</button>
      <button {{action 'updateAnswerFormHide'}}>Cancel</button>

    </div>
  </div>

{{else}}
  <button {{action 'updateAnswerForm'}}>Update Answer</button>
{{/if}}
