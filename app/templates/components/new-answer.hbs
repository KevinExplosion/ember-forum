{{#if addNewAnswer}}
  <div class="row">
    <div class="col-md-4">
      <h3>New Answer</h3>

      <form>

        <!-- <div class="form-group">
          <div class="row">
            <div class="col-md-3">
              <label for="title">Title</label>
            </div>
            <div class="col-md-9">
              {{input value=title id="title"}}
            </div>
          </div>
        </div> -->

        <div class="form-group">
          <div class="row">
            <div class="col-md-3">
              <label for="author">Author</label>
            </div>
            <div class="col-md-9">
              {{input value=author id="author"}}
            </div>
          </div>
        </div>

        <div class="form-group">
          <div class="row">
            <div class="col-md-3">
              <label for="subject">Subject</label>
            </div>
            <div class="col-md-9">
              {{input value=subject id="subject"}}
            </div>
          </div>
        </div>

        <div class="form-group">
          <div class="row">
            <div class="col-md-3">
              <label for="category">Category</label>
            </div>
            <div class="col-md-9">
              {{input value=category id="category"}}
            </div>
          </div>
        </div>

        <div class="form-group">
          <div class="row">
            <div class="col-md-3">
              <label for="body">Body</label>
            </div>
            <div class="col-md-9">
              {{input value=body id="body"}}
            </div>
          </div>
        </div>

      </form>

      <button {{action 'saveAnswer'}}>Submit</button>
      <button {{action 'answerFormHide'}}>Cancel</button>

    </div>
  </div>

{{else}}
  <button {{action 'answerFormShow'}}>New Answer</button>
{{/if}}
